<scene version="2.0.0">

    <!-- <integrator type="direct">
        <integer name="emitter_samples" value="4"/>
        <integer name="bsdf_samples" value="0"/>
    </integrator> -->
    <integrator type="path">
        <integer name="max_depth" value="6"/>
    </integrator>

    <sensor type="perspective">
        <float name="near_clip" value="1"/>
        <float name="far_clip" value="1000"/>

        <transform name="to_world">
            <lookat target="0.0, 0.0, 1.5"
                    origin="3, -14.0, 5"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>

        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width" value="1024"/>
            <integer name="height" value="768"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="8"/>
        </sampler>
    </sensor>

    <shape type="ply">
        <string name="filename"
                value="mitsuba-text.ply"/>

        <bsdf type="diffuse">
            <spectrum name="reflectance" value="400:0.1f, 500:0.3f, 600:1.0f, 700:0.5f"/>
        </bsdf>
    </shape>

    <emitter type="point">
        <point name="position" x="1.5" y="-14.0" z="1.5"/>
        <spectrum name="intensity" value="400:100.0f, 500:100.0f, 600:100.0f, 700:15.0f"/>
    </emitter>
    <emitter type="point">
        <point name="position" x="2" y="-6.0" z="4.5"/>
        <spectrum name="intensity" value="400:100.0f, 500:100.0f, 600:100.0f, 700:15.0f"/>
    </emitter>
    <emitter type="point">
        <point name="position" x="1.5" y="-14" z="1.5"/>
        <spectrum name="intensity" value="400:30.0f, 500:1.5f, 600:0.0f, 700:15.0f"/>
    </emitter>
</scene>
